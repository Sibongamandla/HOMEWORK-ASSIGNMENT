@model Capetropolis_Tourism.Models.MealOrderModel
@{
    ViewBag.Title = "View Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #ececec, #b3b3b3);
            color: #343a40;
        }

        .container {
            margin-top: 50px;
        }

        .form-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .order-details p {
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

            .order-details p strong {
                display: inline-block;
                width: 150px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Order Confirmation</h1>

        <div class="form-container">
            <div class="order-details">
                <p><strong>Order ID:</strong> @Model.OrderID</p>
                <p><strong>Order Date:</strong> @Model.OrderDate</p>
                <p><strong>User Name:</strong> @Model.UserName</p>
                <p><strong>Meal Type:</strong> @Model.MealType</p>
                <p><strong>Meal Details:</strong> @Model.MealDetails</p>
                <p><strong>Hotel:</strong> @Model.Hotel</p>
                <p><strong>Meal Agent:</strong> @Model.MealAgentID</p>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>