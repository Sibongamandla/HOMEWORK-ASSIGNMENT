@{
    ViewBag.Title = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="path/to/bootstrap.css">

    <style>
        p {
            padding-top: 20px;
            font-size: 13px;
        }

        h1 {
            margin-top: 50px;
        }

        #button {
            background-color: #373336;
            padding: 10px 20px;
            border: none;
            font-size: 16px;
            cursor: pointer;
        }

            #button:hover {
                background-color: #555555;
            }

        #button2 {
            background-color: dimgrey;
            padding: 10px 20px;
            border: none;
            font-size: 12px;
            cursor: pointer;
        }

            #button2:hover {
                background-color: grey;
            }

        /* Adjust image size */
        .tourism-image {
            width: 100%;
            height: auto;
        }

        /* Adjust spacing */
        .content-container {
            padding-top: 50px;
            padding-bottom: 50px;
        }
    </style>
</head>
<body>
    <main>
        <div class="container-fluid content-container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Booking your stay in Capetropolis</h1>
                    <p>Secure a safe accommodation and a memorable <br /> 
                    experience in our lodging facilities</p>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary" id="button">Get Started</a>
                </div>

                <div class="col-md-6">
                    <img src="~/Content/Images/lodging-pict.jpg" alt="Lodge" class="img-fluid">
                </div>
            </div>

            <hr />

            @*Use query parameters to pass the hotel information throug the URL when openning the bookings pages *@

            <div class="row">
                <div class="col-md-2 text-center">
                    <div> <i class="bi bi-brightness-high"></i></div>
                    <a href="@Url.Action("Bookings", "Pages", new { hotel = "CapeHoney" })" class="btn btn-primary" id="button2">CapeHoney</a>
                    <p>
                        We offer special complementry <br /> services like messages, games,<br />
                        Gym, swimming pool, evening <br /> buffet, special party nights.
                    </p>
                </div>
                <div class="col-md-2 text-center">
                    <div> <i class="bi bi-brightness-high"></i></div>
                    <a href="@Url.Action("Bookings", "Pages", new { hotel = "CapeIvory" })" class="btn btn-primary" id="button2">CapeIvory</a>             <p>
                        We offer special complementry <br /> services like messages, games,<br />
                        Gym, swimming pool, evening <br /> buffet, special party nights.
                    </p>
                </div>
                <div class="col-md-2 text-center">
                    <div> <i class="bi bi-brightness-high"></i></div>
                    <a href="@Url.Action("Bookings", "Pages", new { hotel = "CapeSweet" })" class="btn btn-primary" id="button2">CapeSweet</a>
                    <p>
                        We offer special complementry <br /> services like messages, games,<br />
                        Gym, swimming pool, evening <br /> buffet, special party nights.
                    </p>
                </div>
                <div class="col-md-2 text-center">
                    <div> <i class="bi bi-brightness-high"></i></div>
                    <a href="@Url.Action("Bookings", "Pages", new { hotel = "CapeHive" })" class="btn btn-primary" id="button2">CapeHive</a>
                    <p>
                        We offer special complementry <br /> services like messages, games,<br />
                        Gym, swimming pool, evening <br /> buffet, special party nights.
                    </p>
                </div>
                <div class="col-md-2 text-center">
                    <div> <i class="bi bi-brightness-high"></i></div>
                    <a href="@Url.Action("Bookings", "Pages", new { hotel = "CapeCow" })" class="btn btn-primary" id="button2">CapeCow</a> <p>
                        We offer special complementry <br /> services like messages, games,<br />
                        Gym, swimming pool, evening <br /> buffet, special party nights.
                    </p>
                </div>
            </div>
            <br />


            <div class="row">
                <div class="col-md-6">
                    <h2>Capetropolis Tourism</h2>
                    <p>
                        Welcome to Capetropolis. Our island will offer you comfort and pleasure, the kind that is rare to find elsewhere!
                        <br><br>
                        The attractions in our island include nature, a game reserve, historical sites and monuments, exquisite hotels and restaurants, shopping malls. Visit us to have a memorable experience.
                    </p>
                </div>

                <div class="col-md-6">
                    <img src="~/Content/Images/Tourism Image.jpg" alt="Tourism" class="img-fluid">
                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>