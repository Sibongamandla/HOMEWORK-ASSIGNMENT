@{
    ViewBag.Title = "Bookings";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .booking-container {
            margin-top: 50px;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-title {
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: bold;
        }

        .logo {
            position: absolute;
            top: 20px;
            right: 20px;
            width: 50px;
            height: 50px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 booking-container">
                <img src="~/Content/Images/logo.png" alt="Logo" class="logo">
                <h2 id="hotelName"></h2>
                <h2 class="form-title">Book Your Stay</h2>
                <form>
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" required />
                    </div>

                    <div class="form-group">
                        <label for="surname">Surname</label>
                        <input type="text" class="form-control" id="surname" required />
                    </div>

                    <div class="form-group">
                        <label for="initials">Initials</label>
                        <input type="text" class="form-control" id="initials" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Email Address</label>
                        <input type="email" class="form-control" id="email" required />
                    </div>

                    <div class="form-group">
                        <label for="idType">ID Type</label>
                        <select class="form-control" id="idType">
                            <option>Select</option>
                            <option>South African ID</option>
                            <option>Passport</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="idNum">ID Number</label>
                        <input type="text" class="form-control" id="idNum" required />
                    </div>

                    <div class="form-group">
                        <label for="DOB">Date of Birth</label>
                        <input type="date" class="form-control" id="DOB" required />
                    </div>

                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" required />
                    </div>

                    <div class="form-group">
                        <label for="telephone">Telephone</label>
                        <input type="tel" class="form-control" id="telephone" required />
                    </div>

                    <div class="form-group">
                        <label for="mealReq">Meal Preference</label>
                        <select class="form-control" id="mealReq">
                            <option>Regular</option>
                            <option>Vegan</option>
                            <option>Halal</option>
                            <option>Kosher</option>
                            <option>Indian</option>
                            <option>Gluten-free</option>
                            <option>Keto</option>
                            <option>Paleo</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="roomType">Room Type</label>
                        <select class="form-control" id="roomType"></select>
                    </div>

                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="text" class="form-control" id="price" readonly />
                    </div>

                    <div class="form-group">
                        <label for="features">Features</label>
                        <input type="text" class="form-control" id="features" readonly />
                    </div>

                    <button type="button" class="btn btn-primary btn-block" onclick="confirmBooking()">Confirm Booking</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Room types and prices for different hotels
        const roomTypes = {
            CapeHoney: [{ type: 'Single', price: 100, features: 'Basic amenities' }, { type: 'Double', price: 150, features: 'Basic amenities' }],
            CapeIvory: [{ type: 'Single', price: 120, features: 'Luxury amenities' }, { type: 'Double', price: 180, features: 'Luxury amenities' }],
            CapeSweet: [{ type: 'Single', price: 110, features: 'Comfort amenities' }, { type: 'Double', price: 160, features: 'Comfort amenities' }],
            CapeHive: [{ type: 'Single', price: 130, features: 'Standard amenities' }, { type: 'Double', price: 190, features: 'Standard amenities' }],
            CapeCow: [{ type: 'Single', price: 140, features: 'Deluxe amenities' }, { type: 'Double', price: 200, features: 'Deluxe amenities' }]
        };

        function getQueryParam(param) {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get(param);
        }

        function updateRoomOptions(hotel) {
            const roomTypeSelect = document.getElementById('roomType');
            roomTypeSelect.innerHTML = '';

            if (roomTypes[hotel]) {
                roomTypes[hotel].forEach(room => {
                    const option = document.createElement('option');
                    option.value = room.type;
                    option.text = `${room.type} - $${room.price}`;
                    option.dataset.price = room.price;
                    option.dataset.features = room.features;
                    roomTypeSelect.appendChild(option);
                });
            }

            // Update price and features based on the first room type
            updatePriceAndFeatures();
        }

        function updatePriceAndFeatures() {
            const roomTypeSelect = document.getElementById('roomType');
            const selectedOption = roomTypeSelect.options[roomTypeSelect.selectedIndex];
            if (selectedOption) {
                document.getElementById('price').value = selectedOption.dataset.price;
                document.getElementById('features').value = selectedOption.dataset.features;
            }
        }

        document.getElementById('roomType').addEventListener('change', updatePriceAndFeatures);

        function confirmBooking() {
            const booking = {
                firstName: document.getElementById('firstName').value,
                surname: document.getElementById('surname').value,
                initials: document.getElementById('initials').value,
                email: document.getElementById('email').value,
                idType: document.getElementById('idType').value,
                idNum: document.getElementById('idNum').value,
                DOB: document.getElementById('DOB').value,
                address: document.getElementById('address').value,
                telephone: document.getElementById('telephone').value,
                mealReq: document.getElementById('mealReq').value,
                roomType: document.getElementById('roomType').value,
                price: document.getElementById('price').value,
                features: document.getElementById('features').value,
                bookingId: generateGUID(),
                timestamp: new Date().toISOString()
            };

            // Save booking details to localStorage
            localStorage.setItem('booking_' + booking.bookingId, JSON.stringify(booking));

            // Redirect to booking confirmation page
            window.location.href = '@Url.Action("BookingConfirmation", "Pages")?bookingId=' + booking.bookingId;
        }

        function generateGUID() {
            return 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
                const r = Math.random() * 16 | 0,
                    v = c == 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
        }

        // Initialize room options for the selected hotel
        const hotel = getQueryParam('hotel') || 'CapeHoney';
        document.getElementById('hotelName').textContent = hotel;
        updateRoomOptions(hotel);
    </script>
</body>
</html>
