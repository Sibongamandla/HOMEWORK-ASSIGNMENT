@model Capetropolis_Tourism.Models.BookingModel
@{
    ViewBag.Title = "Booking Confirmation";
    var hotel = ViewBag.Hotel as Capetropolis_Tourism.Models.Hotel;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #ececec, #b3b3b3);
            color: #343a40;
        }

        .confirmation-container {
            margin-top: 50px;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: auto;
        }

            .confirmation-container img {
                max-width: 100px;
                margin-bottom: 20px;
                display: block;
                margin-left: auto;
                margin-right: auto;
            }

            .confirmation-container h2 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 2rem;
                font-weight: bold;
            }

        .booking-details p {
            font-size: 1.1rem;
            margin-bottom: 10px;
        }

            .booking-details p strong {
                display: inline-block;
                width: 150px;
            }

        .booking-details {
            max-width: 700px;
            margin: auto;
        }

            .booking-details .row {
                display: flex;
            }

            .booking-details .col-md-6 {
                padding-right: 15px;
                padding-left: 15px;
            }

        .navigation-buttons {
            margin-top: 20px;
            text-align: center;
        }

            .navigation-buttons .btn {
                margin: 5px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="confirmation-container">
                @if (hotel != null)
                {
                    <img src="@hotel.Logo" alt="@hotel.Name Logo" class="img-fluid mb-4">
                    <h2>Booking Confirmation - @hotel.Name</h2>
                }
                <div class="booking-details">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Booking ID:</strong> @Model.BookingId</p>
                            <p><strong>Hotel:</strong> @Model.HotelName</p>
                            <p><strong>Date:</strong> @Model.BookingDate.ToString("dd MMMM yyyy")</p>
                            <p><strong>First Name:</strong> @Model.FirstName</p>
                            <p><strong>Surname:</strong> @Model.Surname</p>
                            <p><strong>Initials:</strong> @Model.Initials</p>
                            <p><strong>Email:</strong> @Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>ID Type:</strong> @Model.IdType</p>
                            <p><strong>ID No.:</strong> @Model.IdNum</p>
                            <p><strong>Date of Birth:</strong> @Model.DOB</p>
                            <p><strong>Postal Address:</strong> @Model.Address</p>
                            <p><strong>Meal Preference:</strong> @Model.MealReq</p>
                            <p><strong>Room Type:</strong> @Model.RoomType</p>
                            <p><strong>Price:</strong> R@Model.Price</p>
                            <p><strong>Features:</strong> @Model.Features</p>
                        </div>
                    </div>
                </div>
                <div class="navigation-buttons">
                    <a href="@Url.Action("Meals", "Home")" class="btn btn-secondary">Go to Meals Page</a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to Home Page</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>